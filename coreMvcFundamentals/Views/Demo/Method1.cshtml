
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Method1</title>
</head>
<body>
    <h1>This is message: @TempData["Message"]</h1>
    <h2>There are customer @TempData["CustomerCount"] to the list.</h2>
    <table>
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        <tbody>
                @foreach (var item in TempData["CustomerList"] as List<Customer>)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>

                </tr>
                }

        </tbody>
        </thead>
    </table>
    <br />
    <!--For method two-->
    @{
        TempData.Keep("Message");
    }
    <!-- For method  two-->
    <a asp-controller="Demo" asp-action="Method2">Go Method2</a>

</body>
</html>
